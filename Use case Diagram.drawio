<?xml version="1.0" encoding="UTF-8"?>
<platformUseCases title="360Taste_MultiVendor_Platform_UC_Draft" date="2025-12-05">

    <projectNiche>Multi-Vendor Food Ordering Platform for Ghanaian Students</projectNiche>
    <coreConstraintSolved>Eliminate customer disappointment due to meals being finished by implementing real-time stock updates.</coreConstraintSolved>

    <actor role="Customer">
        
        <useCase id="UC001_Availability">
            <name>Check Real-Time Meal Status</name>
            <description>User views the specific 'Available' or 'Finished' status of a meal before ordering, directly solving the primary pain point.</description>
            <priority>CRITICAL</priority>
            <systemNote>This is a core differentiating feature from standard ordering apps.</systemNote>
        </useCase>

        <useCase id="UC002_Order">
            <name>Place Order and Select Logistics</name>
            <description>User places an order and chooses between the standard **Delivery** or **Pickup** option.</description>
            <priority>High</priority>
        </useCase>

        <useCase id="UC003_Payment">
            <name>Pay with Local Methods</name>
            <description>User completes payment, utilizing integrated local methods, specifically **Mobile Money**.</description>
            <priority>High</priority>
        </useCase>
        
    </actor>
    
    <actor role="Vendor">

        <useCase id="UC101_Menu">
            <name>Manage Own Menu and Pricing</name>
            <description>Vendor logs in to manage their specific list of food items, descriptions, and prices.</description>
            <priority>High</priority>
        </useCase>

        <useCase id="UC102_StockUpdate">
            <name>Quickly Toggle Stock Status</name>
            <description>Vendor must have a fast, simple mechanism to toggle a meal's status between 'Available' and 'Finished' (feeds UC001).</description>
            <priority>CRITICAL</priority>
        </useCase>

        <useCase id="UC103_OrderReceive">
            <name>Receive and Confirm New Orders</name>
            <description>Vendor is alerted to and confirms new incoming orders placed by customers.</description>
            <priority>High</priority>
        </useCase>

    </actor>

    <actor role="Admin">
        
        <useCase id="UC201_VendorApproval">
            <name>Approve New Vendor Registrations</name>
            <description>Admin (Elikem) reviews registration details and grants full access to new vendors, exercising **full control**.</description>
            <priority>CRITICAL (Key requirement from Elikem)</priority>
        </useCase>

        <useCase id="UC202_VendorControl">
            <name>Remove or Suspend Existing Vendors</name>
            <description>Admin can remove, suspend, or reactivate any registered vendor on the platform.</description>
            <priority>High</priority>
        </useCase>

        <useCase id="UC203_GlobalMenu">
            <name>Oversee All Vendor Menus</name>
            <description>Admin has view and edit access to all menus across all vendors for quality assurance and standardization.</description>
            <priority>High</priority>
        </useCase>

    </actor>

</platformUseCases>



<?xml version="1.0" encoding="UTF-8"?>
<System name="360 Taste Multi-Vendor Platform">
    
    <!-- Documentation: This XML defines the Use Case Diagram structure for 360 Taste -->
    <!-- Scope: Multi-vendor food ordering with specific Admin controls and Real-time stock management -->

    <Actors>
        <Actor id="A1" name="Customer" type="Primary">
            <Description>The end-user looking to order food.</Description>
        </Actor>
        <Actor id="A2" name="Vendor" type="Secondary">
            <Description>Independent food sellers managing their own stalls.</Description>
        </Actor>
        <Actor id="A3" name="Admin (Elikem)" type="Primary">
            <Description>The platform owner with super-admin privileges.</Description>
        </Actor>
    </Actors>

    <UseCases>
        <!-- Customer Use Cases -->
        <UseCase id="UC1" name="Check Real-Time Availability">
            <ActorRef id="A1"/>
            <Description>View 'Available' or 'Finished' status to avoid disappointment.</Description>
        </UseCase>
        <UseCase id="UC2" name="Place Order (Delivery/Pickup)">
            <ActorRef id="A1"/>
            <Description>Select food and choose fulfillment method.</Description>
        </UseCase>
        <UseCase id="UC3" name="Pay via Mobile Money">
            <ActorRef id="A1"/>
            <Description>Complete transaction using local payment integration.</Description>
        </UseCase>

        <!-- Vendor Use Cases -->
        <UseCase id="UC4" name="Manage Menu Items">
            <ActorRef id="A2"/>
            <Description>Add, edit, or delete items specific to their vendor profile.</Description>
        </UseCase>
        <UseCase id="UC5" name="Toggle Stock Status">
            <ActorRef id="A2"/>
            <Description>Instantly switch item status between Available/Finished.</Description>
        </UseCase>
        <UseCase id="UC6" name="Receive Orders">
            <ActorRef id="A2"/>
            <Description>View incoming orders from customers.</Description>
        </UseCase>

        <!-- Admin Use Cases -->
        <UseCase id="UC7" name="Approve New Vendors">
            <ActorRef id="A3"/>
            <Description>Review and activate new vendor registrations.</Description>
        </UseCase>
        <UseCase id="UC8" name="Manage All Menus">
            <ActorRef id="A3"/>
            <Description>Override or edit any menu on the platform.</Description>
        </UseCase>
        <UseCase id="UC9" name="Remove/Suspend Vendor">
            <ActorRef id="A3"/>
            <Description>Ban or pause a vendor's access.</Description>
        </UseCase>
    </UseCases>

    <Relationships>
        <!-- Associations between Actors and Use Cases -->
        <Association from="A1" to="UC1"/>
        <Association from="A1" to="UC2"/>
        <Association from="A1" to="UC3"/>
        
        <Association from="A2" to="UC4"/>
        <Association from="A2" to="UC5"/>
        <Association from="A2" to="UC6"/>
        
        <Association from="A3" to="UC7"/>
        <Association from="A3" to="UC8"/>
        <Association from="A3" to="UC9"/>
    </Relationships>

</System>


